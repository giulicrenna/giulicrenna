;; The first three lines of this file were inserted by DrRacket. They record metadata
;; about the language level of this file in a form that our tools can easily process.
#reader(lib "htdp-beginner-reader.ss" "lang")((modname ejercicio_2) (read-case-sensitive #t) (teachpacks ((lib "image.rkt" "teachpack" "2htdp") (lib "universe.rkt" "teachpack" "2htdp"))) (htdp-settings #(#t constructor repeating-decimal #f #t none #f ((lib "image.rkt" "teachpack" "2htdp") (lib "universe.rkt" "teachpack" "2htdp")) #f)))
(define negro "black")
(define rojo "red")
(define azul "blue")
(define amarillo "yellow")
(define verde "green")
(define inicial 0)
(define delta 1)

(define (manejador-pantalla estado) (cond [(and (>= estado 0) (<= estado 50)) (overlay (circle estado "solid" amarillo) (empty-scene 500 500))]
                                      [(and (> estado 50) (<= estado 100)) (overlay (circle estado "solid" rojo) (empty-scene 500 500))]
                                      [(> estado 100) (overlay (circle estado "solid" verde) (empty-scene 500 500))]))
(define (manejador-reloj-dec estado) (cond
                                     [(not (= estado 0)) (- estado delta)]
                                      [else 200]))
(define (manejador-reloj-inc estado) (cond
                                     [(not (= estado 0)) (+ estado delta)]
                                      [else 1]))
(define (manejador-teclado estado key) (cond
                                         [(number? (string->number key)) (* (string->number key) 10)]
                                          [else 0]))
(define (terminar estado) (< 110 estado))

(big-bang inicial
  (to-draw manejador-pantalla)
  (on-tick manejador-reloj-inc)
  (on-key manejador-teclado)
  (stop-when terminar))